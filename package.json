{
  "name": "design-system-workspace",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web-app dev",
    "dev:test": "pnpm --filter test-app dev",
    "dev:student-groups": "pnpm --filter student-groups-app dev",
    "dev:student-groups-backend": "cd apps/student-groups-app/backend && node server.js",
    "build:ds": "pnpm --filter design-system build",
    "install:all": "pnpm install",
    "version:ds": "pnpm --filter design-system version",
    "publish:ds": "pnpm publish --filter design-system --registry=https://npm.pkg.github.com"
  }
}
